@model InsertOrUpdatePoseModel

<form asp-action="UpdatePoseToDatabase" asp-controller="Pose" method="post">
    <input asp-for="PoseId" type="hidden" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="SanskritName" class="control-label">Sanskrit Name</label>
        <input asp-for="SanskritName" class="form-control"/>
    </div>
    
    <div class="form-group">
        <label asp-for="TranslationName" class="control-label">Sanskrit Name Translation</label>
        <input asp-for="TranslationName" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="PoseDescription" class="control-label">Description</label>
        <input asp-for="PoseDescription" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PoseBenefits" class="control-label">Benefits</label>
        <input asp-for="PoseBenefits" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UrlSvg" class="control-label">Svg Image Url</label>
        <input type="text" asp-for="UrlSvg" class="form-control"/>
        <span asp-validation-for="UrlSvg" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UrlSvgAlt" class="control-label">Image for Thumbnail</label>
        <input type="text" asp-for="UrlSvgAlt" class="form-control"/>
        <span asp-validation-for="UrlSvgAlt" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DifficultyId" class="control-label">Select Difficulty</label>
        <select asp-for="DifficultyId" asp-items="Model.DifficultyOptions" class="form-control">
            <option value="">-- Select Difficulty --</option>
        </select>
    </div>

    <div class="form-group">
        <label class="control-label">Select Categories</label>
        @foreach (var cat in Model.CategoryOptions)
        {
            <div class="form-check">
                <input type="checkbox" 
                       name="SelectedCategoryIds" 
                       value="@cat.Value" 
                       class="form-check-input"
                       @(cat.Selected ? "checked" : "") />
                <label class="form-check-label">@cat.Text</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Update Pose</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}