@model UpdatePoseModel

@using (Html.BeginForm("UpdatePoseToDatabase", "Pose", FormMethod.Post))
{
    @Html.HiddenFor(m => m.PoseId)

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label asp-for="PoseDesc" class="control-label">Description</label>
        @Html.TextBoxFor(m => m.PoseDesc, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label asp-for="PoseBenefits" class="control-label">Benefits</label>
        @Html.TextBoxFor(m => m.PoseBenefits, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Select Difficulty</label>
        @Html.DropDownListFor(m => m.SelectedDifficultyId, Model.DifficultyOptions, "-- Select Difficulty --", new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Select Categories</label>
        @foreach (var cat in Model.CategoryOptions)
        {
            <div class="form-check">
                <input type="checkbox"
                       name="SelectedCategoryIds"
                       value="@cat.Value"
                       class="form-check-input"
                       @(cat.Selected ? "checked" : "") />
                <label class="form-check-label">@cat.Text</label>
            </div>
        }
    </div>

    <input type="submit" value="Update Pose" class="btn btn-primary" />
} 